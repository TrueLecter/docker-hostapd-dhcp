#!/bin/bash

parse_env () {

verbose "Setting values from environment"

CHANNEL=${AP_CHANNEL:=$CHANNEL}
SSID=${AP_SSID:=$SSID}
PASSPHRASE=${AP_PASS:=$PASSPHRASE}
WPA_VERSION=${AP_WPA_VERSION:=$WPA_VERSION}
DNS_SERVER=${AP_DNS_SERVER:=$DNS_SERVER}
HIDDEN=${AP_HIDDEN:=$HIDDEN}
MAC_FILTER=${AP_MAC_FILTER:=$MAC_FILTER}
MAC_FILTER_ACCEPT=${AP_MAC_FILTER_ACCEPT:=$MAC_FILTER_ACCEPT}
ISOLATE_CLIENTS=${AP_ISOLATE_CLIENTS:=$ISOLATE_CLIENTS}
IEEE80211N=${AP_IEEE80211N:=$IEEE80211N}
IEEE80211AC=${AP_IEEE80211AC:=$IEEE80211AC}
HT_CAPAB=${AP_HT_CAPAB:=$HT_CAPAB}
VHT_CAPAB=${AP_VHT_CAPAB:=$VHT_CAPAB}
DRIVER=${AP_DRIVER:=$DRIVER}
COUNTRY=${AP_COUNTRY:=$COUNTRY}
FREQ_BAND_SET=${AP_FREQ_BAND_SET:=$FREQ_BAND_SET}
FREQ_BAND=${AP_FREQ_BAND:=$FREQ_BAND}
NEW_MACADDR=${AP_NEW_MACADDR:=$NEW_MACADDR}
USE_PSK=${AP_USE_PSK:=$USE_PSK}
NOSCAN=${AP_NOSCAN:=$NOSCAN}

HOSTAPD_DEBUG_ARGS=${AP_HOSTAPD_DEBUG_ARGS:=$HOSTAPD_DEBUG_ARGS}
REDIRECT_TO_LOCALHOST=${AP_REDIRECT_TO_LOCALHOST:=$REDIRECT_TO_LOCALHOST}

}